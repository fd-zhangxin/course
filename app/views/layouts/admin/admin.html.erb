<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <%= stylesheet_link_tag "/stylesheets/admin/style" %>
    <%= stylesheet_link_tag "/bootstrap/css/bootstrap.min" %>
    <%= stylesheet_link_tag "/bootstrap/css/bootstrap-datetimepicker.min" %>
    <link href="/bootstrap/less/datetimepicker.less">
    <script src="/javascript/jquery-1.12.1.min.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="/bootstrap/js/bootstrap-datetimepicker.fr.js" type="text/javascript"></script>
    <script src="/javascript/shadowbox/shadowbox.js" type="text/javascript"></script>
    <link href="/javascript/shadowbox/shadowbox.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
      Shadowbox.init({
        skipSetup: true,
        players: ["iframe"],
        modal:  true
      });
      function clear_company_password(){
          // alert(document.getElementById("password_change_flag_id").value);
          if(document.getElementById("password_change_flag_id").value == 0){  
            $('input[type=password]').each(function(index,item){
                if(item.name == "company[password]" || item.name == "company[password_confirmation]" || item.name == "company_admin[password]" || item.name == "company_admin[password_confirmation]" || item.name == "store[password]" || item.name == "store[password_confirmation]"){
                    item.value = "";
                }
                document.getElementById("password_change_flag_id").value = 1;
            });
          }
      }
    </script>
    <script src="/javascript/admin/common.js"></script>
    <link href="/bootstrap/fonts/glyphicons-halflings-regular.eot">
    <link href="/bootstrap/fonts/glyphicons-halflings-regular.svg">
    <link href="/bootstrap/fonts/glyphicons-halflings-regular.ttf">
    <link href="/bootstrap/fonts/glyphicons-halflings-regular.woff">
    <%= yield :header %>
  </head>
  <body>
    <div class="container-fluid">
      <div id="head"><%= render :partial => "/layouts/admin/admin_navi" %></div>
      <div id="ajax-indicator" style="display:none;"><span>読み込み中...</span></div>
      <div class="container-fluid">
        <div id="messages">
          <%= render :partial=> "/layouts/admin/messages"%>
        </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
